<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Posts</title>
</head>

<body>

	<h1>Posts</h1>

	<ul>
		<% posts.forEach(function(post){ %>
			<li>
				<%= post.text %>
			</li>
			<% }); %>
	</ul>

	<form action="/posts" method="POST">
		<textarea name="text"></textarea>
		<button type="submit">Post</button>
	</form>
</body>

</html>
